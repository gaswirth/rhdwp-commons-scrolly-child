@require "partials/_global.styl"

/* ==========================================================================
	Child Main Stylesheet
   ========================================================================== */

html
body
	font-family $ff-body


a
	color $red

	&:link
	&:visited
		text-decoration none

	&:hover
	&:active
		text-decoration underline


.section-title
	font-weight 300
	text-transform uppercase


#top
	#masthead
		height auto

		.header-content
			position relative
			top 0

			#site-title
				width 100%
				max-width 560px
				margin 0 auto

			#rhd-social
				width 100%
				margin-top 1em
				-flexbox()
				line-height 1

				li
					width 18%
					height auto
					-flexitem()

					img
						width 100%
						height auto

	.top-image
		width 100%
		height auto
		position relative

		img
			width (@width)
			height (@height)
			display block


#news
	height auto
	min-height 0

	.section-content
		padding 0

	.news-list
		display block
		min-height initial

		.news-item
			min-width 0
			min-height 0
			max-width none

			.attachment-news
				max-width 450px

			.entry-content
				font-size 1.2em
				text-align center

	.pagination
		display none

#resume
	.section-content
		width 100%

		.resume-items
			width 100%
			list-style none
			padding-left 0
			line-height 1

			li
				width 100%
				display block
				margin-bottom 2em

				&:first-of-type
					width 85%
					margin 0 auto (@margin-bottom) auto

				img
					width 100%
					height auto

#contact
	.section-content
		#contact-form
			width 100%
			float none
			margin 1em auto

			label
				font-weight 300

			input
			textarea
				font-family $ff-body

			input[type="submit"]
				background white
				border-radius 0.2em

				&:hover
				&:active
					background $red2

#colophon
	background-color $red
	color white
	margin-bottom 0

	a
		color white

		&:hover
		&:active
			text-decoration underline


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#top
		height 100vh
		-clearfix()

		#masthead
		.top-image
			height 100%

		#masthead
			width 320px
			float left

			.header-content
				width auto
				min-width 0
				left 0

				#site-title
					width 280px
					margin 0 auto

		.top-image
			margin-left 320px
			position relative

			img
				width auto
				height 100%
				position absolute
				left 0

		.scrolldown
			display block
			position absolute
			bottom 10%
			left 50%
			transform translateX(-50%)


	#news
		.news-list
			width 100%
			height 300px
			margin 0

			.news-item
				width 100%
				-clearfix()

				.attachment-news
					width 300px
					float left
					margin-right 5%

				.entry-content
					margin-left 300px
					text-align left

		.pagination
			display block

			.nav-links
				.page-numbers
					height auto

					.pagination-button
						background $red no-repeat
						border-radius 0
						background-position 6% center
						background-size auto 65%

	#resume
		.section-content
			-wrapper()

			.resume-items
				-flexbox()

				li
					width 30%
					max-width 300px
					max-height 300px
					overflow hidden
					-flexitem()

					&:first-of-type
						width (@width)

					img
						width 100%
						height auto